<?xml version="1.0" encoding="UTF-8" ?>
<layouts>

    <default>

        <reference name="head">

            <block type="fbpixel/head" name="fbpixel.head" as="fbpixel_head" template="webtise/fbpixel/head.phtml">
                <block type="fbpixel/product" name="fbpixel.addtocart" as="fbpixel_product_addtocart" template="webtise/fbpixel/product/addtocart.phtml"/>
            </block>

        </reference>

    </default>

    <!-- Add ViewContent & AddToCart Tracking to Product Pages-->
    <catalog_product_view>

        <reference name="fbpixel.head">

            <block type="fbpixel/product" name="fbpixel.view.content.product" as="fbpixel_view_content_product" template="webtise/fbpixel/product/view-content.phtml"/>

        </reference>

    </catalog_product_view>

    <!-- Add AddToCart Tracking to Cart Page-->
    <checkout_cart_index>

        <reference name="fbpixel.head">

            <block type="fbpixel/registration" name="fbpixel.registration" as="fbpixel_registration" template="webtise/fbpixel/registration.phtml"/>

        </reference>

    </checkout_cart_index>

    <!-- Add IntiateCheckout Tracking to Checkout-->
    <checkout_onepage_index>

        <reference name="fbpixel.head">

            <block type="fbpixel/checkout" name="fbpixel.checkout" as="fbpixel_checkout" template="webtise/fbpixel/checkout.phtml"/>
            <block type="fbpixel/registration" name="fbpixel.registration" as="fbpixel_registration" template="webtise/fbpixel/registration.phtml"/>

        </reference>

    </checkout_onepage_index>

    <!-- Add InitiateCheckout Tracking to Checkout Idev OSC Compatibility (InitiateCheckout and PaymentMethod)-->
    <onestepcheckout_index_index>

        <reference name="fbpixel.head">

            <block type="fbpixel/checkout" name="fbpixel.checkout" as="fbpixel_checkout" template="webtise/fbpixel/checkout.phtml"/>
            <block type="fbpixel/registration" name="fbpixel.registration" as="fbpixel_registration" template="webtise/fbpixel/registration.phtml"/>

        </reference>

        <reference name="onestepcheckout.summary">

            <block type="fbpixel/checkout_payment" name="fbpixel.checkout.payment" as="fbpixel_checkout_payment" template="webtise/fbpixel/checkout/payment.phtml"/>

        </reference>

    </onestepcheckout_index_index>

    <!-- Add AddPaymentMethod Tracking to Checkout-->
    <checkout_onepage_review>

        <reference name="checkout.onepage.review.info.items.before">

            <block type="fbpixel/checkout_payment" name="fbpixel.checkout.payment" as="fbpixel_checkout_payment" template="webtise/fbpixel/checkout/payment.phtml"/>

        </reference>

    </checkout_onepage_review>

    <!-- Add Purchase Tracking to Checkout Success-->
    <checkout_onepage_success>

        <reference name="fbpixel.head">

            <block type="fbpixel/checkout_success" name="fbpixel.checkout.success" as="fbpixel_checkout_success" template="webtise/fbpixel/checkout/success.phtml"/>

        </reference>

    </checkout_onepage_success>

    <!-- Add AddToWishlist Tracking to Wishlist Page-->
    <wishlist_index_index>

        <reference name="fbpixel.head">

            <block type="fbpixel/wishlist" name="fbpixel.addtowishlist" as="fbpixel_product_addtowishlist" template="webtise/fbpixel/product/wishlist.phtml"/>

        </reference>

    </wishlist_index_index>

    <!-- Add Search Tracking to Search Results Page -->
    <catalogsearch_result_index>

        <reference name="fbpixel.head">

            <block type="fbpixel/search" name="fbpixel.search" as="fbpixel_search" template="webtise/fbpixel/search.phtml"/>

        </reference>

    </catalogsearch_result_index>

    <!-- Add Complete Registration Tracking to My Account Page -->
    <customer_account_index>

        <reference name="fbpixel.head">

            <block type="fbpixel/registration" name="fbpixel.registration" as="fbpixel_registration" template="webtise/fbpixel/registration.phtml"/>

        </reference>

    </customer_account_index>

</layouts>